<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginscreen.LoginActivity">

    <TextView
        android:id="@+id/text_view_pin_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pin_code_hide"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/grid_layout_numeric_keypad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_layout_numeric_keypad_margin_top"
        android:columnCount="@integer/grid_layout_numeric_keypad_column_count"
        android:orientation="horizontal"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_pin_code"
        tools:background="@color/black"
        tools:padding="@dimen/grid_layout_numeric_keypad_margin_top" />

</androidx.constraintlayout.widget.ConstraintLayout>