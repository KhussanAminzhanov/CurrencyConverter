<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonNumericKeypad" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@drawable/btn_numeric_keypad_color_selector</item>
        <item name="android:background">@drawable/btn_numeric_keypad_selector</item>
        <item name="android:textSize">@dimen/btn_numeric_keypad_default_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/btn_numeric_keypad_margin</item>
        <item name="android:layout_width">@dimen/btn_numeric_keypad_width</item>
        <item name="android:layout_height">@dimen/btn_numeric_keypad_height</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">24dp</item>
    </style>
</resources>